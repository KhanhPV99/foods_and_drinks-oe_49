<div class="col-md-6 col-lg-3 ftco-animate">
  <div class="product">
    <%= link_to product_path(product), class: "img-prod" do %>
      <% if check_thumb? product.thumbnail %>
        <%= image_tag product.thumbnail %>
      <% else %>
        <%= gravatar_for product %>
      <% end %>
    <% end %>
    <div class="text py-3 pb-4 px-3 text-center">
      <h3><%= link_to product.name, product_path(product) %></h3>
      <p class="p-description"><%= t("categories.categories") %> : <%= product.category.name %></p>
      <% if check_sold_out? product.quantity %>
        <p class="alert alert-danger">
          <%= t("menu_page.sold_out") %>
        </p>
      <% else %>
        <p class="p-description">
          <%= t("menu_page.quantity") %>
          <%= product.quantity %>
        </p>
      <% end %>
      <div class="d-flex">
        <div class="pricing">
          <p class="price">
            <span class="price-sale"><%= number_to_currency(product.price, locale: :vi) %></span>
          </p>
        </div>
      </div>
      <div class="bottom-area d-flex px-3">
        <div class="m-auto d-flex">
          <%= link_to product_path(product), class: "add-to-cart d-flex justify-content-center align-items-center text-center" do %>
            <span><i class="ion-ios-menu"></i></span>
          <% end %>
          <% unless check_sold_out? product.quantity %>
            <%= link_to carts_path(product_id: product, quantity: 1), method: :post, class: "add-to-cart d-flex justify-content-center align-items-center text-center" do %>
              <span><i class="ion-ios-cart"></i></span>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
